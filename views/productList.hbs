<div class="w-100 text-center">
    <h1>Product List</h1>
</div>
{{#if emptyProducts}}
    <div>
        <h3>There are not products, you can add some products
            <a href="/">here</a></h3>
    </div>
{{else}}
    <table class="table table-striped col-md-6 text-center">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Price</th>
                <th scope="col">Image</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
                <tr>
                    <td>{{this.title}}</td>
                    <td>{{this.price}}</td>
                    <td><img src={{this.thumbnail}} width="200" /></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{/if}}