<form class="col-md-4" onsubmit="addProduct(event)">
    <div class="form-outline mb-4 form-name">
        <label class="form-label" for="title">Title:</label>
        <input 
            type="text" 
            id="title" 
            name="title" 
            class="form-control"
            required
        />
    </div>

    <div class="form-outline mb-4 form-price">
        <label class="form-label" for="price">Price:</label>
        <input 
            type="text" 
            id="price" 
            name="price" 
            class="form-control" 
            required
        />
    </div>

    <div class="form-outline mb-4 form-thumbnail">
        <label class="form-label" for="thumbnail">Thumbnail URL:</label>
        <input
            type="text"
            id="thumbnail"
            name="thumbnail"
            class="form-control"
            required
        />
    </div>

    <button type="submit" class="btn btn-primary btn-block mb-4">Add</button>
</form>

<div class="w-100 text-center">
    <h1>Product List</h1>
</div>
{{#if emptyProducts}}
    <div>
        <h3>There are not products, you can add some products
            <a href="/">here</a></h3>
    </div>
{{else}}
    <table class="table table-striped col-md-6 text-center">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Price</th>
                <th scope="col">Image</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
                <tr>
                    <td>{{this.title}}</td>
                    <td>{{this.price}}</td>
                    <td><img src={{this.thumbnail}} width="200" /></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{/if}}

<div class="w-100 text-center">
    <h1>Chat</h1>
</div>
<div class="col-md-6 container text-center">
    <div class="input-group col-md-12 d-flex justify-content-center email-container">
        <span class="input-group-text">Email:</span>
        <input type="email" class="email-input col-md-6" name="email"/>

    </div>
    <div class="chat col-md-12 text-left" style="">
        {{#each messages}}
            <p>
                <span class="email">{{this.email}}</span>
                <span class="date">{{this.date}}: </span>
                <span class="message">{{this.message}}</span>
            </p>
        {{/each}}
    </div>
    <div class="col-md-12 d-flex p-0 message-container flex-wrap">

        <input type="text" class="message-input col-md-8" name="message"/>
        <button class="btn btn-primary col-md-4" onclick="sendMessage()">Send</button>

    </div>
</div>
